{
  "name": "alez-api",
  "version": "0.0.1",
  "description": "alez api, node/express/mongo",
  "main": "index.js",
  "scripts": {
    "dev": "node app",
    "test": "jest --watch",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eceterak/alez-API.git"
  },
  "keywords": [
    "alez",
    "api",
    "node",
    "express",
    "mongo"
  ],
  "author": "Marek Bartula",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eceterak/alez-API/issues"
  },
  "homepage": "https://github.com/eceterak/alez-API#readme",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "supertest": "^6.3.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "eqeqeq": "warn",
      "prettier/prettier": "warn"
    },
    "prettier": {
      "singleQuote": true,
      "printWidth": 140
    },
    "jest": {
      "watchPlugins": [
        "jest-watch-typeahead/filename",
        "jest-watch-typeahead/testname"
      ],
      "testRunner": "jest-jasmine2",
      "testPathIgnorePatterns": [
        "<rootDir>/node_modules/",
        "<rootDir>/config/"
      ]
    }
  }
}
